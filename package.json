{
	"name": "pictures-trimmer",
	"version": "1.0.2",
	"description": "Node.js image trimmer by color (JPEG, PNG, BMP, TIFF, GIF)",
	"bin": {
		"pictures-trimmer": "bin/pictures-trimmer.js"
	},
	"directories": {
		"test": "test"
	},
	"type": "commonjs",
	"scripts": {
		"test": "npx nyc --reporter=lcov mocha 'test/**/*.js'",
		"test-local": "npx nyc --reporter=text mocha 'test/**/*.js'",
		"lint": "npx eslint . --fix",
		"lint:test": "npx eslint ."
	},
	"repository": {
		"url": "git+https://github.com/montoyadamien/pictures-trimmer.git",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/montoyadamien/pictures-trimmer/issues"
	},
	"author": "Damien Montoya <damien.montoya26@gmail.com>",
	"license": "Apache-2.0",
	"keywords": [
		"jpeg",
		"png",
		"webp",
		"tiff",
		"gif",
		"webp",
		"avif",
		"image",
		"trimmer"
	],
	"dependencies": {
		"commander": "^14.0.3",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-mocha": "^11.2.0",
		"eslint-plugin-prettier": "^5.5.5",
		"globals": "^17.3.0",
		"mocha": "^11.3.0",
		"nyc": "^17.1.0",
		"prettier": "^3.8.1"
	}
}
